<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="4dp">

    <TextView
        android:id="@+id/widgetPulseName"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Select Pulse"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/widgetControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetPulseName"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widgetBtnPrev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Previous"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/widgetBtnPlayStop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Play or Stop"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/widgetBtnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Next"
            android:src="@android:drawable/ic_media_next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetControls"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="4dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/widgetPulseDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description"
            android:textSize="11sp"
            android:textColor="#CCCCCC"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/widgetBtnInfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="Info"
            android:src="@android:drawable/ic_menu_help"
            android:scaleType="fitCenter"
            android:alpha="0.7" />
    </LinearLayout>

</RelativeLayout>
